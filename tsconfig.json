{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": [
    "src",
    "assets"
  ],
  "exclude": [
    "node_modules"
  ]
}
